    "paths": {
        "/api/user/username": {
            "post": {
                "tags": [
                    "user"
                ],
                "summary": "Return if username is used",
                "description": "Return if username is used",
                "operationId": "App\\Http\\Controllers\\Api\\UserController::check_username",
                "parameters": [
                    {
                        "name": "username",
                        "in": "query",
                        "description": "string amb el valor del username",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "true -> username disponible; false -> username no disponible"
                    }
                }
            }
        },
        "/api/register": {
            "post": {
                "tags": [
                    "user"
                ],
                "summary": "Return list all users",
                "description": "Returns an array with all the users",
                "operationId": "App\\Http\\Controllers\\AuthController::register",
                "parameters": [
                    {
                        "name": "username",
                        "in": "query",
                        "description": "string amb el valor del username",
                        "required": true
                    },
                    {
                        "name": "first_name",
                        "in": "query",
                        "description": "string amb el valor del first_name",
                        "required": true
                    },
                    {
                        "name": "last_name",
                        "in": "query",
                        "description": "string amb el valor del last_name",
                        "required": true
                    },
                    {
                        "name": "email",
                        "in": "query",
                        "description": "string amb el valor del mail",
                        "required": true
                    },
                    {
                        "name": "password",
                        "in": "query",
                        "description": "string amb el valor del password",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation"
                    },
                    "400": {
                        "description": "error operation"
                    }
                }
            }
        }
    },
