{
    "openapi": "3.0.0",
    "info": {
        "title": "API Sharefy",
        "description": "",
        "contact": {
            "email": "equip@sharefy.com"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/api/user/username": {
            "post": {
                "tags": [
                    "user"
                ],
                "summary": "Retorna si username es troba disponible",
                "description": "Retorna si username es troba disponible",
                "operationId": "App\\Http\\Controllers\\Api\\UserController::check_username",
                "parameters": [
                    {
                        "name": "username",
                        "in": "query",
                        "description": "string amb el valor del username",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "true -> username disponible; false -> username no disponible"
                    }
                }
            }
        },
        "/api/user/email": {
            "post": {
                "tags": [
                    "user"
                ],
                "summary": "Retorna si email es troba disponible",
                "description": "Retorna si email es troba disponible",
                "operationId": "App\\Http\\Controllers\\Api\\UserController::check_email",
                "parameters": [
                    {
                        "name": "email",
                        "in": "query",
                        "description": "string amb el valor del email",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "true -> email disponible; false -> email no disponible"
                    }
                }
            }
        },
        "/api/user/reset": {
            "post": {
                "tags": [
                    "user"
                ],
                "summary": "Envia la password a l'usuari per mail",
                "description": "Envia la password a l'usuari per mail",
                "operationId": "App\\Http\\Controllers\\Api\\UserController::reset_password",
                "parameters": [
                    {
                        "name": "email",
                        "in": "query",
                        "description": "string amb el valor del email",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Operació correcta i mail enviat"
                    },
                    "400": {
                        "description": "Operació incorrecta, no existeix l'usuari amb el mail indicat"
                    }
                }
            }
        },
        "/api/user/{username}?token=valor": {
            "get": {
                "tags": [
                    "user"
                ],
                "summary": "Dado un username existente, devuelve su información.",
                "description": "Dado un username existente, devuelve su información.",
                "operationId": "App\\Http\\Controllers\\Api\\UserController::get_info_user",
                "parameters": [
                    {
                        "name": "username",
                        "in": "query",
                        "description": "string amb el valor del username",
                        "required": true
                    },
                    {
                        "name": "token",
                        "in": "query",
                        "description": "Valor del token_access",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Devuelve un json con la información del usuario."
                    }
                }
            }
        },
        "/api/register": {
            "post": {
                "tags": [
                    "user"
                ],
                "summary": "Torna un access_token si l'usuari es registra",
                "description": "Torna un access_token si l'usuari es registra correctament, és dona per fet que l'username i email es troben disponibles.",
                "operationId": "App\\Http\\Controllers\\AuthController::register",
                "parameters": [
                    {
                        "name": "username",
                        "in": "query",
                        "description": "string amb el valor del username",
                        "required": true
                    },
                    {
                        "name": "first_name",
                        "in": "query",
                        "description": "string amb el valor del first_name",
                        "required": true
                    },
                    {
                        "name": "last_name",
                        "in": "query",
                        "description": "string amb el valor del last_name",
                        "required": true
                    },
                    {
                        "name": "email",
                        "in": "query",
                        "description": "string amb el valor del mail",
                        "required": true
                    },
                    {
                        "name": "password",
                        "in": "query",
                        "description": "string amb el valor del password",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "operació correcta"
                    },
                    "400": {
                        "description": "operació incorrecta"
                    }
                }
            }
        },
        "/api/login": {
            "post": {
                "tags": [
                    "user"
                ],
                "summary": "Torna un access_token si l'usuari fa login correctament",
                "description": "Torna un access_token si l'usuari fa login correctament",
                "operationId": "App\\Http\\Controllers\\AuthController::login",
                "parameters": [
                    {
                        "name": "email",
                        "in": "query",
                        "description": "string amb el valor del mail",
                        "required": true
                    },
                    {
                        "name": "password",
                        "in": "query",
                        "description": "string amb el valor del password",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "operació correcta"
                    },
                    "400": {
                        "description": "operació incorrecta"
                    },
                    "401": {
                        "description": "Dades no valides (contrasenya o username)"
                    }
                }
            }
        },
        "/api/logout": {
            "post": {
                "tags": [
                    "user"
                ],
                "summary": "access_token a una llista negra i no es pot tornar a utilitzar més",
                "description": "posa l'access_token a una llista negra i no es pot tornar a utilitzar més, per tenir un altre token haurà de fer login un altre cop.",
                "operationId": "App\\Http\\Controllers\\AuthController::logout",
                "parameters": [
                    {
                        "name": "token",
                        "in": "query",
                        "description": "string amb el valor del access_token",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "operació correcta"
                    },
                    "400": {
                        "description": "token no vàlid"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "user",
            "description": "Operations about user",
            "externalDocs": {
                "description": "Find out more about store",
                "url": "http://swagger.io"
            }
        }
    ]
}